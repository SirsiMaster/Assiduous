rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions for Assiduous roles
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isAgent() {
      return isAuthenticated() && getUserRole() == 'agent';
    }
    
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    // PRODUCTION RULES: Authentication required for all access
    
    // Users collection: Authenticated users can read users list, write own profile
    match /users/{userId} {
      allow read: if isAuthenticated(); // Any logged-in user can read user profiles
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }
    
    // Properties collection: Authenticated users can read, agents/admins can write
    match /properties/{propertyId} {
      allow read: if isAuthenticated(); // Any logged-in user can browse properties
      allow write: if isAuthenticated() && (isAgent() || isAdmin());
    }
    
    // Leads collection: Agents and admins only
    match /leads/{leadId} {
      allow read: if isAuthenticated() && (isAgent() || isAdmin());
      allow write: if isAuthenticated() && (isAgent() || isAdmin());
    }
    
    // Transactions collection: Authenticated users can read own, agents/admins can read all
    match /transactions/{transactionId} {
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.userId || 
        request.auth.uid == resource.data.agentId ||
        isAgent() || 
        isAdmin()
      );
      allow write: if isAuthenticated() && (isAgent() || isAdmin());
    }
    
    // Agent stats: Agents can read their own stats, admins can read all
    match /agent_stats/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if isAdmin();
    }
    
    // Verification docs: Enhanced access for Assiduous roles
    match /verifications/{verificationId} {
      // Buyers can read their own, agents can read assigned, admins can read all
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.buyerId ||
        (isAgent() && request.auth.uid == resource.data.agentId) ||
        isAdmin()
      );
      allow write: if false; // server-only via Functions
    }

    // Webhook logs: server-only
    match /webhook_logs/{doc} {
      allow read, write: if false;
    }

    // Idempotency mapping: server-only
    match /idempotency/{doc} {
      allow read, write: if false;
    }
  }
}
