{
  "name": "assiduous",
  "version": "0.129.3",
  "description": "Assiduous Realty Platform",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:auth": "playwright test tests/auth.spec.js",
    "test:auth:ui": "playwright test tests/auth.spec.js --ui",
    "test:auth:debug": "playwright test tests/auth.spec.js --debug",
    "test:auth:chromium": "playwright test tests/auth.spec.js --project=chromium",
    "test:auth:report": "playwright show-report test-results/html",
    "tw:build": "tailwindcss -i assets/css/tailwind.input.css -o assets/css/generated.css --minify",
    "tw:watch": "tailwindcss -i assets/css/tailwind.input.css -o assets/css/generated.css --watch",
    "ucs:build": "node scripts/build-pages.js",
    "ucs:build:dev": "NODE_ENV=dev node scripts/build-pages.js",
    "ucs:build:staging": "NODE_ENV=staging node scripts/build-pages.js",
    "ucs:build:prod": "NODE_ENV=prod node scripts/build-pages.js",
    "ucs:verify": "node scripts/build-pages.js --verify-only"
  },
  "dependencies": {
    "@firebase/auth": "^1.3.0",
    "@firebase/firestore": "^4.1.3",
    "@firebase/storage": "^0.11.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "firebase": "^12.4.0",
    "firebase-functions": "^6.5.0",
    "jose": "^4.14.6",
    "next": "^15.5.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tr46": "^0.0.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@types/node": "20.6.0",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "^10.4.20",
    "eslint": "8.49.0",
    "eslint-config-next": "13.4.19",
    "firebase-admin": "^13.5.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.41",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.10",
    "typescript": "5.2.2"
  }
}
