{
  "functions": {
    "source": "functions"
  },
  "hosting": [
    {
      "target": "prod",
      "public": "assiduous-build",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**", "**/firebase-migration-package/**"],
      "redirects": [
        { "source": "/", "destination": "/index.html", "type": 302 }
      ],
      "rewrites": [
        { "source": "/api/**", "function": "app" }
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": { "port": 5001 },
    "firestore": { "port": 8080 },
    "hosting": { "port": 5000 },
    "ui": { "enabled": true }
  }
}
