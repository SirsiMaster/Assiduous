<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.assiduous.metrics</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/node</string>
        <string>/Users/thekryptodragon/Development/assiduous/scripts/calculate_accurate_metrics.js</string>
    </array>
    
    <key>WorkingDirectory</key>
    <string>/Users/thekryptodragon/Development/assiduous</string>
    
    <key>StartInterval</key>
    <integer>300</integer> <!-- Run every 5 minutes (300 seconds) -->
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>StandardOutPath</key>
    <string>/tmp/assiduous-metrics.log</string>
    
    <key>StandardErrorPath</key>
    <string>/tmp/assiduous-metrics-error.log</string>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>
</dict>
</plist>
